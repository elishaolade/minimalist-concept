<section class="collection-section d-flex " data-single-collection>
    <div class="container no-gutters">
        <div class="row">
            <div class="featured-collection-section_strip d-flex justify-content-between col-12 py-3">
                <div class="strip_text">
                    {{ collection.title }}
                </div>
            </div>
        </div>
        <div class="products row">
            {% for product in collection.products %}
                <div class="product col-lg-6 col-md-6 col-12 p-0 p-sm-0 p-md-0 p-lg-0" data-product>
                    <a href="{{ product.url }}" class="d-flex justify-content-center overflow">
                        <img class="w-100" src="{{ product.featured_image | img_url: 'master' }}"/>
                    </a>
                    <div class="overlay px-4 py-4 px-md-3 py-md-3 px-lg-5 py-lg-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <a href="{{ product.url }}" class="title">{{ product.title }}</a>
                            {% if product.available %}
                                <span class="price">{{ product.price | money }}</span>
                            {% else %}
                                <span>Sold out</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section> 
