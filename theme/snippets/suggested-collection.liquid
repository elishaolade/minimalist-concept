
{% assign associated_collection = product.collections.first %}
<section class="featured-collection-section d-flex ">
    <div class="container no-gutters">
        <div class="row">
            <div class="d-flex justify-content-between col-12 py-3">
                <div class="strip_text">
                    Recommended Products
                </div>
                <div class="strip_link">
                    <a class="collection__link" href="{{ collections[associated_collection.handle].url }}">View Collection</a>
                </div>
            </div>
        </div>
        <div class="products row">
            {% for product in collections[associated_collection.handle].products limit:3 %}
                <div class="product col-lg-4 col-md-6 p-0 p-sm-0 p-md-0 p-lg-0" data-product>
                    <a href="{{ product.url }}" class="d-flex justify-content-center overflow">
                        <img class="w-100" src="{{ product.featured_image | img_url: '500x' }}"/>
                    </a>
                    <div class="overlay px-4 py-4 px-md-3 py-md-3 px-lg-5 py-lg-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <a href="{{ product.url }}" class="title">{{ product.title }}</a>
                            {% if product.available %}
                                <span class="price">{{ product.price | money }}</span>
                            {% else %}
                                <span>Sold out</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section> 