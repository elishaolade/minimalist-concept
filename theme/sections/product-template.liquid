<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-lg-6">
        <div class="product-details py-3 px-3">
          <h3 class="product-price mb-3">{{ product.price | money }}</h3>
            <h1 class="product-title mb-3">{{ product.title }}</h1>
            {%comment%}Product Form (ESSENTIAL){% endcomment %}
            {% form 'product', product, id: 'product-form' %}
              {% if product.available %}
                <div class="mb-2">
                  <select class="mr-2" name="id" id="featured-productselect">
                  {{ current_variant.price | money }}
                  {% for variant in product.variants %}
                    {% if variant.available %}
                      <option value="{{ variant.id }}">
                        {{ variant.title }} - {{ variant.price | money_with_currency }}
                      </option>
                    {% else %}
                      <option value={{ product.variants[0] }} disabled="disabled">
                        {{ variant.title }} - sold out
                      </option>
                    {% endif %}
                  {% endfor %}
                  </select>
                  <label for="Quantity">quantity</label>
                  <input type="number" id="Quantity" class="mr-3" name="quantity" value="1" min="1">
                </div>
                <input class="btn" type="submit" name="add" id="AddToCart" value="Add to cart" data-add-to-cart>Add to Cart</button>
              {% else %}
                Sold Out
              {% endif %}
            {% endform %}
            {%comment%}Product Form (ESSENTIAL){% endcomment %}
            <div class="mt-3">
              {{ product.description }}
            </div>
        </div>
      </div>
      <div class="col-12 col-lg-6">
        <div class="product-display">
          <div class="square">
            <div class="w-100 content">
              <div class="carousel slide">
                <div class="carousel-inner">
                  {% for image in product.images %}
                    <div class="carousel-item">
                      <img class="d-block w-100" src="{{ image.src | product_img_url: 'medium' }}">
                    </div>
                  {% endfor %}
                  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>                    
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
