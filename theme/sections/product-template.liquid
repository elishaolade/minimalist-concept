<section class="product-template-section">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-md-5 col-lg-4">
        <div class="product-details py-3 px-3">
          <h3 class="product-price mb-3">{{ product.price | money }}</h3>
          <h1 class="product-title mb-3">{{ product.title }}</h1>
          {% form 'product', product, data-product-form:'' %}
            {% if product.available %}
              <div class="form-group mb-2">
                <div class="d-flex justify-content-between align-items-center pb-1">
                </div>
                <select id="variant-select" class="custom-select" name="id" id="featured-productselect">
                {{ current_variant.price | money }}
                {% for variant in product.variants %}
                  {% if variant.available %}
                    <option value="{{ variant.id }}">
                      {{ variant.title }} - {{ variant.price | money_with_currency }}
                    </option>
                  {% else %}
                    <option value={{ product.variants[0] }} disabled="disabled">
                      {{ variant.title }} - sold out
                    </option>
                  {% endif %}
                {% endfor %}
                </select>
              </div>
              <div class="form-group d-flex align-items-center">
                <input name="quantity" class="form-control mr-2" style="border: 1px solid #ced4da; width: 6rem;" type="number" min="1" max="9" step="1" value="1"/>
                <button class="btn btn-primary btn-block" type="submit">Add to Bag</button>
            </div>
            {% endif %}
          {% endform %}
          <div class="product-description mt-3">
            {{ product.description }}
          </div>
        </div>
      </div>
      <div class="col-12 col-md-7 col-lg-6">
        <div class="product-display">
          <div class="square">
            <div class="w-100 content">
              <div id="product_display" class="carousel slide">
                <div class="carousel-inner">
                  {% for image in product.images %}
                    <div class="carousel-item">
                      <img class="w-100" src="{{ image.src | product_img_url: 'master' }}">
                    </div>
                  {% endfor %}
                  <a class="carousel-control-prev" href="#product_display" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#product_display" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>                    
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>